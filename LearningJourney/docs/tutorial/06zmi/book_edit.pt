<html metal:use-macro="views/standard_macros/view">
  <body>
    <div metal:fill-slot="body" tal:define="info context/@@bookview/getBookInfo">
      <form method="POST" action="changebook">

        <div>
          <label>Title: </label>
          <input type="text" name="title" tal:attributes="value info/title" />
        </div>

        <div>
          <label>Author: </label>
          <input type="text" name="author" tal:attributes="value info/author" />
        </div>

        <div>
          <label>Publisher: </label>
          <input type="text" name="publisher" tal:attributes="value info/publisher" />
        </div>

        <div>
          <input type="submit" value="Save" />
        </div>

      </form>
    </div>
  </body>
</html>